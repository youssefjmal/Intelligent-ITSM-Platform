          }
        ]
      ]
    },
    "Fetch Ticket from Backend": {
      "main": [
        [
          {
            "node": "Merge & Validate Ticket",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Merge & Validate Ticket": {
      "main": [
        [
          {
            "node": "Enrichment OK?",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Enrichment OK?": {
      "main": [
        [
          {
